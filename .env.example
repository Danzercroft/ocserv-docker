# OCServ Configuration Environment Variables

# SSL Certificates (must be provided via volume mount)
VPN_SERVER_CERT=/etc/ocserv/certs/server.crt
VPN_SERVER_KEY=/etc/ocserv/certs/server.key
VPN_CA_CERT=/etc/ocserv/certs/ca.crt

# Domain for certificate (used only for logging)
VPN_DOMAIN=my-vpn-server.local

# Network Settings
VPN_IPV4_NETWORK=10.10.10.0
VPN_IPV4_NETMASK=255.255.255.0
VPN_IPV6_NETWORK=fda9:4efe:7e3b:03ea::/48
VPN_IPV6_PREFIX=64

# Server Settings
VPN_TCP_PORT=443
VPN_UDP_PORT=443
VPN_MAX_CLIENTS=128
VPN_MAX_SAME_CLIENTS=10

# Session Settings
VPN_KEEPALIVE=30
VPN_DPD=60
VPN_MOBILE_DPD=300
VPN_AUTH_TIMEOUT=240
VPN_COOKIE_TIMEOUT=300
VPN_REKEY_TIME=172800

# DNS Settings
VPN_DNS1=8.8.8.8
VPN_DNS2=1.1.1.1
VPN_TUNNEL_ALL_DNS=true

# Security Settings
VPN_BAN_SCORE=80
VPN_BAN_RESET_TIME=300
VPN_MIN_REAUTH_TIME=300

# Compression and Compatibility
VPN_COMPRESSION=true
VPN_CISCO_COMPAT=true

# Logging
VPN_LOG_LEVEL=1

# Routes (comma-separated, empty for no custom routes)
VPN_ROUTES=

# No-routes (comma-separated, empty for no restrictions)
VPN_NO_ROUTES=

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=8000
ENABLE_LOGS=true
METRICS_INTERVAL=30
